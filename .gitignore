# Create .gitignore in root
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
*/node_modules/

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Build outputs
dist/
build/
*/dist/
*/build/

# Docker
docker-compose.override.yml

# Kafka data (if running locally)
kafka-logs/
zookeeper/
EOF
